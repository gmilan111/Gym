<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Add">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/addTitle"
                android:text="Létrehozás"
                android:textSize="45sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_margin="75dp"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/gyakorlat_nev"
                android:layout_gravity="center_horizontal"
                android:hint="Gyakorlat neve"
                android:layout_below="@+id/addTitle"
                android:padding="10dp"
                android:layout_margin="10dp"
                android:textSize="21sp"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/sorozat_szam"
                android:layout_gravity="center_horizontal"
                android:hint="Sorozatszám"
                android:layout_below="@+id/gyakorlat_nev"
                android:padding="10dp"
                android:layout_margin="10dp"
                android:inputType="number"
                android:textSize="21sp"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ismetles_szam"
                android:layout_gravity="center_horizontal"
                android:hint="Ismétlésszám"
                android:layout_below="@+id/sorozat_szam"
                android:padding="10dp"
                android:layout_margin="10dp"
                android:inputType="number"
                android:textSize="21sp"
                />

            <EditText
                android:id="@+id/max_suly"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ismetles_szam"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:hint="Maximum súly (kg)"
                android:inputType="number"
                android:padding="10dp"
                android:textSize="21sp" />


        </RelativeLayout>
    </ScrollView>


    <com.google.android.material.bottomappbar.BottomAppBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:id="@+id/bottomAppBar"
        app:fabCradleMargin="10dp"
        app:fabCradleRoundedCornerRadius="10dp"
        app:fabCradleVerticalOffset="10dp"
        >

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/bottomNaqvigationView"
            android:layout_marginRight="16dp"
            app:menu="@menu/bottom_nav_menu"
            android:background="@drawable/transparent_background"
            />
    </com.google.android.material.bottomappbar.BottomAppBar>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fab"
        android:src="@drawable/baseline_check_24"
        app:layout_anchor="@id/bottomAppBar"
        android:contentDescription="TODO" />
</androidx.coordinatorlayout.widget.CoordinatorLayout>